# ===========================================
# SCALABILITY & CONCURRENCY CONFIGURATION
# ===========================================

# Database Connection Pool
DB_POOL_MIN=20
DB_POOL_MAX=200
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000

# Queue Concurrency Settings
AI_GENERATION_CONCURRENCY=15
THINKING_QUEUE_CONCURRENCY=8
IMAGE_GENERATION_CONCURRENCY=5
EXPORT_CONCURRENCY=12
EMAIL_CONCURRENCY=30
COLLABORATION_CONCURRENCY=100

# WebSocket Configuration
WS_MAX_CONNECTIONS=20000
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=5000

# Cache TTL Settings (seconds)
CACHE_DEFAULT_TTL=300
CACHE_USER_SESSION_TTL=3600
CACHE_PROJECT_METADATA_TTL=300
CACHE_BLOCK_DATA_TTL=60
CACHE_THEME_DATA_TTL=86400

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STRICT_MODE=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=1000

# Load Balancing
ENABLE_STICKY_SESSIONS=true
SESSION_AFFINITY=ip_hash

# Auto-scaling Triggers
CPU_SCALE_UP_THRESHOLD=70
MEMORY_SCALE_UP_THRESHOLD=80
CPU_SCALE_DOWN_THRESHOLD=30
MEMORY_SCALE_DOWN_THRESHOLD=40

# Advanced Features
ENABLE_QUERY_CACHE=true
ENABLE_RESULT_CACHE=true
ENABLE_CONNECTION_POOLING=true
ENABLE_HORIZONTAL_SCALING=true
